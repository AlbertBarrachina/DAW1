import java.util.Scanner;

public class numericos {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		int[] enteros = new int[10];
		int opc = 0;
		int i = 0;
		int pasos = 0;
		for (int n = 0; n < 1;) {
			System.out.println("Opción 1. Crea un array de 10 enteros. \n"
					+ "Opción 2. Calcula cuál es el valor más grande y cuántas veces aparece.\n "
					+ "Opción 3. Guarde dentro de una matriz.\r\n " + "Opción 9. Salir del programa.");
			opc = teclado.nextInt();
			if (opc == 1) {
				for (i = 0; i < 10;) {
					enteros[i] = (int) (Math.random() * 22 + 9);
					if (enteros[i] / 2 == 0) {
						System.out.print(enteros[i]);
						i++;
					}
				}
				
			} else if (opc == 2) {
				if (pasos == 1) {

				} else
					System.out.println("primero deves hacer la opcion 1");
			} else if (opc == 3) {
				if (pasos == 1) {

				} else
					System.out.println("primero deves hacer la opcion 1");
			} else if (opc == 9) {
				System.out.println("Fin del programa");
				n++;
			} else
				System.out.println("Pon un numero correcto");
		}
	}
}